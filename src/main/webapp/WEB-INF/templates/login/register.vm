#set($page="register")
#set($header = "true")
#set($footer = "true")
<div style="width:450px;margin: 75px auto;">
	<form id='registerForm'>
	 <input type="hidden" name="type" value="1"/>
	 <table style="width:100%;margin: 0 auto;">
	    <tr>
	    	<td width="150px" align="right">我的手机号&nbsp;</td>
	    	<td colspan=3><input type='text' name='account' class="required w300 inputText" value='' placeholder="请输入手机号"></td>
	    </tr>
	    <tr>
	    	<td align="right">短信验证码&nbsp;</td>
	    	<td>
	    		<input type='text' name='validateCode' class="required inputText" placeholder="验证码" style="width:150px;"/>
	    	</td>
	    	<td colspan=2>
	    		<div id="sendCode" class="validCode">获取验证码 </div>
	    	</td>
	    </tr>
	    <tr>
	    	<td align="right">我的密码是&nbsp;</td>
	    	<td colspan=3><input type='password' id="password" name='password' class="required w300 inputText" value='' placeholder="请输入您的密码"></td>
	    </tr>
	    <tr>
	    	<td align="right">确认密码是&nbsp;</td>
	    	<td colspan=3><input type='password' name='confirm_password' class="required w300 inputText" value='' placeholder="请再次输入您的密码"></td>
	    </tr>
	    <tr height="45px">
	    	<td width="150px" ><hr align="right"/></td>
	    	<td colspan=2 width="100px" align="center"> 请选择您的身份信息</td>
	    	<td class="lt" width="150px" ><hr align="left"/></td>
	    </tr>
	    <tr>
	    	<td colspan=2 align="center">
	    		<div id="persion" class="pointer">个人</div>
	    	</td>
	    	<td colspan=2 align="center">
	    		<div id="enterprise" class="pointer">企业</div>
	    	</td>
	    </tr>
	    <tr height="45px">
	    	<td colspan=4 align="center">
	    		<div style="margin:0 auto; width:260px;">
					<input type="checkbox" name="checkFlag" value="1" class="checkbox" style="float:left;"/>
					<div style="float:left;line-height:45px;">我已阅读并接受<span class="">《用户服务协议》</span></div>
	    		</div>
	    	</td>
	    </tr>
	    <tr>
	    	<td colspan=4 align="center">
				<img id="register" src="/chance/resources/images/register_10.jpg" class="pointer"/>
	    	</td>
	    </tr>
	  </table>
	</form>
</div>

